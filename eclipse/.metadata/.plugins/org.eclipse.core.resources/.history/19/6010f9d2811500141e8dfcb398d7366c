package handler;

import net.minecraft.client.Minecraft;
import cpw.mods.fml.common.eventhandler.SubscribeEvent;
import cpw.mods.fml.common.gameevent.TickEvent.PlayerTickEvent;

public class PlayerTickHandler {
	private Minecraft mc;
	
	
	@SubscribeEvent
	public void onPlayerTick(PlayerTickEvent event){
		ExtendedPlayer props = new ExtendedPlayer(this.mc.thePlayer);
		
		
		
		if(this.mc.thePlayer.getDataWatcher().getWatchableObjectInt(20) == 10){
			if(props.currentMagicLevel < 99){
				props.currentMagicLevel++;
				System.out.println("DING");
				this.mc.thePlayer.getDataWatcher().updateObject(20, 0);;
			}
			
		}
	}
	
}
